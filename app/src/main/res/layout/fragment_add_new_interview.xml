<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/white"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bold"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_bold_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/italic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_italic_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/underline"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_underlined_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_align_left_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_align_center_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_align_right_35"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/text_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                app:srcCompat="@drawable/ic_baseline_format_color_text_24" />

            <ImageView
                android:id="@+id/highlight"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/ic_baseline_format_color_fill_24" />

            <ImageView
                android:id="@+id/textSize"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/ic_baseline_format_size_24" />

        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/layout_ss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:backgroundTint="@color/cog_img_background"
                android:hint="Name"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:textColor="#FF000000"
                android:textColorHint="#656363"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Company"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inter_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:backgroundTint="@color/cog_img_background"
                android:hint="Company Name"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:textColor="#FF000000"
                android:textColorHint="#656363"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:backgroundTint="@color/cog_img_background"
                android:gravity="center_vertical"
                android:hint="Joining Date"
                android:inputType="date"
                android:minHeight="48dp"
                android:textColor="#FF000000"
                android:textColorHint="#656363"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="10"
            android:background="#FFFFFFFF"
            android:gravity="start|top"
            android:hint="Enter the details"
            android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
            android:isScrollContainer="false"
            android:minHeight="48dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#FF000000"
            android:textColorHint="#656363" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFABSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_gravity="right"
            android:baselineAlignBottom="false"
            android:onClick="saveButton"
            android:src="@drawable/ic_baseline_save_35"
            app:backgroundTint="@color/colorPrimary"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</LinearLayout>