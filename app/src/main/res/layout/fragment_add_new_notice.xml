<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="@color/lightGrey">

    <ImageView
        android:id="@+id/clear_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_refresh_24" />

    <EditText
        android:id="@+id/noticeSubject"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/clear_text"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Subject"
        android:inputType="textMultiLine|textPersonName|textCapSentences"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/noticeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/publish"
        android:layout_below="@id/noticeSubject"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"


        android:hint="Description"
        android:inputType="textMultiLine" />

    <Button

        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:gravity="bottom|center|top"
        android:text="Publish" />

</RelativeLayout>