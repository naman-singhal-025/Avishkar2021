<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ExperienceActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Interview Experience"
        android:textColor="@color/whatsAppColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/experience_ss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:srcCompat="@color/cog_img_background" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/commentsBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_baseline_comment_bank_24"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>